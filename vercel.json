{
  "functions": {
    "pages/api/score.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/score",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods", 
          "value": "POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Accept, Origin, X-Requested-With"
        }
      ]
    }
  ]
}
